@model SunridgeHOA.Models.NewsItem
@{
    ViewData["Title"] = "Create News Item";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<link rel="Stylesheet" href="~/css/Admin/transactions.css" type="text/css" />
<link rel="Stylesheet" href="~/css/Admin/adminnavbar.css?version=51" type="text/css" />
<link rel="Stylesheet" href="~/css/Admin/window.css" type="text/css" />
<link rel="Stylesheet" href="~/css/Admin/table.css" type="text/css" />
<link rel="Stylesheet" href="~/css/Admin/search-bar.css" type="text/css" />

<div class="row col-12">
    <div id="windowFrame" class="col-10">
        <div class="col-12">
            <div class="row">
                <div id="titleDiv" class="col-12">
                    <p id="title">Add News Item</p>
                </div>
            </div>
            <hr />

            <form method="post" asp-action="Create" enctype="multipart/form-data">
                <div class="p-4 border rounded">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group row">
                        <div class="col-2">
                            <label asp-for="Header"></label>
                        </div>
                        <div class="col-5">
                            <input asp-for="Header" class="form-control" />
                        </div>
                        <span asp-validation-for="Header" class="text-danger"></span>
                    </div>

                    <div class="form-group row">
                        <div class="col-2">
                            <label asp-for="Content"></label>
                        </div>
                        <div class="col-5">
                            <textarea asp-for="Content" class="form-control"></textarea>
                        </div>
                        <span asp-validation-for="Content" class="text-danger"></span>
                    </div>

                    <div class="form-group row">
                        <div class="col-2">
                            <label asp-for="Year"></label>
                        </div>
                        <div class="col-5">
                            <select asp-for="Year" class="form-control" asp-items="ViewBag.Year">
                                <option value="-1" hidden selected>Select a year</option>
                            </select>
                        </div>
                        <span asp-validation-for="Year" class="text-danger"></span>
                    </div>

                    <div class="form-group row">
                        <div class="col-2">
                            <label asp-for="FilePath"></label>
                        </div>
                        <div class="col-5">
                            <input type="file" name="files" class="form-control" />
                        </div>
                        <span asp-validation-for="FilePath" class="text-danger"></span>
                    </div>

                    <br />
                    <div class="form-group">
                        <input type="submit" class="btn btn-primary" value="Create" />
                        <a asp-action="Index" class="btn btn-success">Back to List</a>
                    </div>
                </div>
            </form>


        </div>
    </div>
</div>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}