@model SunridgeHOA.Models.Photo
@{
    ViewData["Title"] = "Delete Photo";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<link rel="Stylesheet" href="~/css/Admin/transactions.css" type="text/css" />
<link rel="Stylesheet" href="~/css/Admin/adminnavbar.css?version=51" type="text/css" />
<link rel="Stylesheet" href="~/css/Admin/window.css" type="text/css" />
<link rel="Stylesheet" href="~/css/Admin/table.css" type="text/css" />
<link rel="Stylesheet" href="~/css/Admin/search-bar.css" type="text/css" />

<div class="row col-12">
    <div id="windowFrame" class="col-10">
        <div class="col-12">
            <div class="row">
                <div id="titleDiv" class="col-12">
                    <p id="title">Delete Photo?</p>
                </div>
            </div>
            <hr />
            <form method="post" asp-action="Delete">
                <div class="p-4 border rounded">
                    <input type="hidden" asp-for="PhotoId" />
                    <div class="form-group row">
                        <div class="col-2">
                            <label asp-for="Title"></label>
                        </div>
                        <div class="col-5">
                            <input asp-for="Title" readonly class="form-control" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-2">
                            <label asp-for="Owner.FullName"></label>
                        </div>
                        <div class="col-5">
                            <input asp-for="Owner.FullName" readonly class="form-control" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-2">
                            <label asp-for="Year"></label>
                        </div>
                        <div class="col-5">
                            <input asp-for="Year" readonly class="form-control" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-2">
                            <label asp-for="Category"></label>
                        </div>
                        <div class="col-5">
                            <input asp-for="Category" readonly class="form-control" />
                        </div>
                    </div>
                    <div class="col-1">

                    </div>
                    <div class="col-3">
                        <img src="@Model.Image" style="border-radius: 5px; border:1px solid #bbb9b9; width:100%" />
                    </div>
                    <br />
                    <div class="form-group">
                        <input type="submit" class="btn btn-danger" value="Delete" />
                        <a asp-action="MyPhotos" class="btn btn-success">Back to List</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>