@model SunridgeHOA.Models.Photo
@{
    ViewData["Title"] = "Edit Photo";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Edit Photo "@Model.Title"</h2>
<hr />

<div class="row">
    <div class="col-md-6">
        <form method="post" asp-action="Edit" enctype="multipart/form-data">
            <input type="hidden" asp-for="PhotoId" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Title"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Year"></label>
                <input asp-for="Year" class="form-control" />
                <span asp-validation-for="Year" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Category"></label>
                <select asp-for="Category" class="form-control" asp-items="ViewBag.Category"></select>
            </div>
            <div class="form-group">
                <label asp-for="Image"></label>
                <input type="file" name="files" class="form-control" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
            <div class="form-group">
                <img src="@Model.Image" style="border-radius: 5px; border:1px solid #bbb9b9; width:100%" />
            </div>
            <div class="form-group">
                <input type="submit" class="btn btn-primary" value="Save" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="MyPhotos">Back to List</a>
</div>