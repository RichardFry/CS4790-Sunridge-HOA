@model List<ClassifiedListing>
@{
    ViewData["Title"] = "Other Services";
}
<link rel="Stylesheet" href="~/css/General/classifiedsSlider.css" type="text/css" />

<!-- inro section Grid -->
<section class=" p-5 text-center">
    <div class="container">
        <div class="container container-fluid no2">
            <h1 class="main-heading mb-4">Business and Services supporting Sunridge</h1>
        </div>
    </div>
</section>



<!-- Testimonials -->
<div class="container gallery-container text-center mt-5 mb-5">

    @foreach (var item in Model.Where(x => x.IsArchive == false && x.ClassifiedCategory.Description == "Other").Select((value, index) => new { value, index }))
    {
        <div class="container mb-5">
            <hr>
            <div class="container container-fluid bg-light p-5">
                <div class="row">
                    <div class="col-sm-6">
                        <div id="box" class="container">
                            <!--Carousel Wrapper-->
                            <div id="carousel-thumb @item.index" class="carousel slide carousel-fade carousel-thumbnails" data-ride="carousel" data-interval="0">
                                <!--Slides-->
                                <div class="carousel-inner" role="listbox">
                                    @foreach (var image in item.value.Images.Where(x => x.ClassifiedListingId == item.value.ClassifiedListingId))
                                    {
                                        if (image.IsMainImage)
                                        {
                                            <div class="carousel-item active">
                                                <img id="itemImage" class="d-block w-100" src="@image.ImageURL">
                                            </div>
                                        }
                                        else
                                        {
                                            <div class="carousel-item">
                                                <img id="itemImage" class="d-block w-100" src="@image.ImageURL">
                                            </div>
                                        }

                                    }
                                </div>
                                <!--/.Slides-->
                                <!--Controls-->
                                <a class="carousel-control-prev" href="#carousel-thumb @item.index" role="button" data-slide="prev">
                                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                    <span class="sr-only">Previous</span>
                                </a>
                                <a class="carousel-control-next" href="#carousel-thumb @item.index" role="button" data-slide="next">
                                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                    <span class="sr-only">Next</span>
                                </a>
                                <!--/.Controls-->
                                <ol id="thumbnailBar" class="carousel-indicators list-inline visible-sm-block hidden-xs-block visible-md-block visible-lg-block">
                                    @foreach (var image in item.value.Images.Where(x => x.ClassifiedListingId == item.value.ClassifiedListingId).Select((value, index) => new { value, index }))
                                    {

                                        if (image.value.IsMainImage)
                                        {
                                            <li data-target="#carousel-thumb @item.index" data-slide-to="@image.index" class="active list-inline-item">
                                                <img id="thumbnail" class="img-fluid" src="@image.value.ImageURL">
                                            </li>
                                        }
                                        else
                                        {
                                            <li data-target="#carousel-thumb @item.index" data-slide-to="@image.index" class="list-inline-item">
                                                <img id="thumbnail" class="img-fluid" src="@image.value.ImageURL">
                                            </li>
                                        }

                                    }
                                </ol>
                            </div>
                            <!--/.Carousel Wrapper-->
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <h1>@item.value.ItemName</h1>
                        <p>@item.value.Description</p>
                        <h4>Email: @item.value.Email</h4>
                        <h4>Phone: @item.value.Phone</h4>
                    </div>
                </div>
            </div>
        </div>
    }

</div>




@section Scripts
    {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/baguettebox.js/1.8.1/baguetteBox.min.js"></script>
    <script>
        baguetteBox.run('.tz-gallery');
    </script><div role="dialog" id="baguetteBox-overlay"><div id="baguetteBox-slider"></div><button type="button" id="previous-button" aria-label="Previous" class="baguetteBox-button"><svg width="44" height="60"><polyline points="30 10 10 30 30 50" stroke="rgba(255,255,255,0.5)" stroke-width="4" stroke-linecap="butt" fill="none" stroke-linejoin="round"></polyline></svg></button><button type="button" id="next-button" aria-label="Next" class="baguetteBox-button"><svg width="44" height="60"><polyline points="14 10 34 30 14 50" stroke="rgba(255,255,255,0.5)" stroke-width="4" stroke-linecap="butt" fill="none" stroke-linejoin="round"></polyline></svg></button><button type="button" id="close-button" aria-label="Close" class="baguetteBox-button"><svg width="30" height="30"><g stroke="rgb(160,160,160)" stroke-width="4"><line x1="5" y1="5" x2="25" y2="25"></line><line x1="5" y1="25" x2="25" y2="5"></line></g></svg></button></div>

    <!-- Bootstrap core JavaScript -->
    <script src="vendor/jquery/jquery.min.js"></script>
    <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
}