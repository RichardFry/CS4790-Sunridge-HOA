
@{
    ViewData["Title"] = "CommonAreaAssets";
}
<link rel="Stylesheet" href="~/css/Admin/common-area-assets.css" type="text/css" />

<link rel="Stylesheet" href="~/css/Admin/adminnavbar.css?version=51" type="text/css" />
<link rel="Stylesheet" href="~/css/Admin/window.css" type="text/css" />
<link rel="Stylesheet" href="~/css/Admin/table.css" type="text/css" />
<link rel="Stylesheet" href="~/css/Admin/search-bar.css" type="text/css" />

<div class="row col-12">
    <div class="col-2">
        <partial name="~/Views/Shared/_AdminNavbar.cshtml" />
    </div>

    <div id="windowFrame" class="col-10">
        <div class="col-12">
            <div class="row">
                <div id="titleDiv" class="col-12">
                    <p id="title">Sunridge Common Area Assets</p>
                </div>
            </div>
            <hr />
            <div class="row">
                <div class="col-12">
                    <input id="searchBar" type="text" placeholder="Search..."> <span id="searchIcon" class="fa fa-search"></span>
                    <button class="btn btn-primary float-right">Add Transaction</button>
                </div>
            </div>

            <div class="row">
                <div class="col-12">
                    <table id="table" class="table table-striped table-bordered table-sm">
                        <tr>
                            <th>Asset Name</th>
                            <th>Date Purchased</th>
                            <th>Purchase Cost</th>
                            <th>Status</th>
                            <th>Description</th>
                            <th id="actionsHeader">Actions</th>
                        </tr>
                        @for (int i = 0; i < 5; i++)
                        {
                            <tr>
                                <td>South BBQ Area</td>
                                <td>2/28/19</td>
                                <td>$720.00</td>
                                <td>Active</td>
                                <td>BBQ Area located in south corner of HOA</td>
                                <td id="actionsRow">
                                    <button class="btn btn-primary fas fa-file-alt"> Add</button>
                                    <button class="btn btn-warning fas fa-edit"> Edit</button>
                                    <button class="btn btn-danger fas fa-trash-alt"> Delete</button>
                                </td>
                            </tr>
                        }
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>




