
@{
    ViewData["Title"] = "Transactions";
}


<link rel="Stylesheet" href="~/css/adminnavbar.css?version=51" type="text/css" />
<link rel="Stylesheet" href="~/css/transactions.css" type="text/css" />

<div class="row">
    <div class="col-2">
        <partial name="~/Views/Shared/_AdminNavbar.cshtml" />
    </div>

    <div class="col-10">
        <div class="row">
            <div id="title" class="col-12">
                <p>Sunridge Transactions</p>
                <div class="float-right">
                    <p>Open HOA Balance: </p><p id="money">$123</p>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-12">
                <input type="text" name="fname" value="Search">
                <button class="btn btn-primary" style="float:right">Add transaction</button>
            </div>
        </div>



        <div class="row">
            <div class="col-12">
                <table class="table table-striped table-bordered table-sm" style="margin-top:10px;">
                    <tr>
                        <th>Type</th>
                        <th>Date Added</th>
                        <th>Date Paid</th>
                        <th>Amount</th>
                        <th>Status</th>
                        <th>Account</th>
                        <th>Notes</th>
                        <th>Actions</th>
                    </tr>
                    @for (int i = 0; i < 5; i++)
                    {
                        <tr>
                            <td>Monthly Dues</td>
                            <td>2/28/19</td>
                            <td>50</td>
                            <td>$300.00</td>
                            <td>Open</td>
                            <td><a>Richard Fry</a></td>
                            <td><a>View</a></td>
                            <td class="text-center">
                                <button class="btn btn-primary fas fa-file-alt"> Add</button>
                                <button class="btn btn-warning fas fa-edit"> Edit</button>
                                <button class="btn btn-danger fas fa-trash-alt"> Delete</button>
                            </td>
                        </tr>
                    }


                </table>
            </div>
        </div>
    </div>
</div>