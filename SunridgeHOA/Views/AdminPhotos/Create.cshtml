@* Binding to ProductTypes Model *@
@*@model GraniteWarehouse.Models.ViewModels.ProductViewModels
  @using GraniteWarehouse.Extensions*@

@model SunridgeHOA.Models.Photo
@{
    ViewData["Title"] = "Create";
}

<link rel="Stylesheet" href="~/css/Admin/transactions.css" type="text/css" />
<link rel="Stylesheet" href="~/css/Admin/adminnavbar.css?version=51" type="text/css" />
<link rel="Stylesheet" href="~/css/Admin/window.css" type="text/css" />
<link rel="Stylesheet" href="~/css/Admin/table.css" type="text/css" />
<link rel="Stylesheet" href="~/css/Admin/search-bar.css" type="text/css" />


<div class="row col-12">
    <div class="col-2">
        <partial name="~/Views/Shared/_AdminNavbar.cshtml" />
    </div>

    <div id="windowFrame" class="col-10">
        <div class="col-12">
            <div class="row">
                <div id="titleDiv" class="col-12">
                    <p id="title">Post a Photo</p>
                </div>
            </div>
            <hr />

            <form method="post" asp-action="Create" enctype="multipart/form-data">
                <div class="p-4 border rounded">
                    @*<div asp-validation-summary="ModelOnly" class="text-danger"></div>*@

                    <div class="form-group row">
                        <div class="col-2">
                            <label asp-for="Image"></label>
                        </div>
                        <div class="col-5">
                            <input type="file" name="files" class="form-control" />
                        </div>
                        <span asp-validation-for="Image" class="text-danger"></span>
                    </div>

                    <div class="form-group row">
                        <div class="col-2">
                            <label asp-for="Title"></label>
                        </div>
                        <div class="col-5">
                            <input asp-for="Title" class="form-control" />
                        </div>
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                    <div class="form-group row">
                        <div class="col-2">
                            <label asp-for="Owner.FirstName"></label>
                        </div>
                        <div class="col-5">
                            <input asp-for="Owner.FirstName" class="form-control" />
                        </div>
                        <span asp-validation-for="Owner.FirstName" class="text-danger"></span>
                    </div>
                    <div class="form-group row">
                        <div class="col-2">
                            <label asp-for="Year"></label>
                        </div>
                        <div class="col-5">
                            <input asp-for="Year" class="form-control" />
                        </div>
                        <span asp-validation-for="Year" class="text-danger"></span>
                    </div>

                    <div class="form-group row">
                        <div class="col-2">
                            <label asp-for="Category"></label>
                        </div>
                        <div class="col-5">
                            <select asp-for="Category" class="form-control" />
                            @*<select asp-for="@Model.Products.SpecialTagsId" asp-items="Model.SpecialTags.ToSelectListItem(Model.Products.SpecialTagsId)" class="form-control"></select>*@
                        </div>
                    </div>
                    <br />
                    <div class="form-group">
                        <input type="submit" class="btn btn-primary" value="Create" />
                        <a asp-action="Index" class="btn btn-success">Back to List</a>
                    </div>
                </div>
            </form>

            @*@section Scripts{
                    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
                }*@
        </div>
    </div>
</div>