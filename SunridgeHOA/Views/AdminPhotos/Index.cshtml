@model IEnumerable<SunridgeHOA.Models.Photo>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_ContentLayout.cshtml";
}



<div class="row col-12">
    <div class="col-2">
        <partial name="~/Views/Shared/_AdminNavbar.cshtml" />
    </div>

    <div id="windowFrame" class="col-10">
        <div>
            <h2>Admin Photo List</h2>

            <p id="createAlign">
                <a asp-action="Create"><button type="button" class="btn btn-primary btn-sm">Add New Photo</button></a>
            </p>


            <table>
                <thead id="headTr">
                    <tr>
                        <th>@Html.DisplayNameFor(m => m.Category)</th>
                        <th>@Html.DisplayNameFor(m => m.Title)</th>
                        <th>@Html.DisplayNameFor(m => m.Owner.FullName)</th>
                        @*<th>@Html.DisplayNameFor(m => m.OwnerId)</th>*@
                        <th>@Html.DisplayNameFor(m => m.Year)</th>
                        <th id="photoImage">@Html.DisplayNameFor(m => m.Image)</th>
                        @*<th id="actionsHeader">Actions</th>*@
                        <th></th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>@Html.DisplayFor(m => item.Category)</td>
                        <td>@Html.DisplayFor(m => item.Title)</td>
                        <td>@Html.DisplayFor(m => item.Owner.FullName)</td>
                        @*<td>@Html.DisplayFor(m => item.OwnerId)</td>*@
                        <td>@Html.DisplayFor(m => item.Year)</td>
                        <td id="photoImageAlign"><img src="@Html.DisplayFor(m => item.Image)" style="border-radius:5px;width:100%;" /></td>
                       
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.PhotoId"><button type="button" class="btn btn-info btn-sm">Edit</button></a> |
                            <a asp-action="Details" asp-route-id="@item.PhotoId"><button type="button" class="btn btn-warning btn-sm">Details</button></a> |
                            <a asp-action="Delete" asp-route-id="@item.PhotoId"><button type="button" class="btn btn-danger btn-sm">Delete</button></a>
                        </td>

                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>













