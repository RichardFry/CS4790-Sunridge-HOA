@model List<SunridgeHOA.Models.ViewModels.ClassifiedListingViewModel>
@using SunridgeHOA.Models.ViewModels
@using SunridgeHOA.Extensions
@{
    ViewData["Title"] = "Classifieds Index";
}

<div class="row">
    <div class="col-lg-3 col-md-6">
        <p id="btn-group">
            <a asp-action="Create" class="btn btn-primary btn-sm btn-block">Post New Classified</a>
            <a asp-action="AddService" class="btn btn-primary btn-sm btn-block">Post New Service</a>
        </p>
    </div>
</div>

<div class="table-responsive-sm">
    <table class="table table-responsive-sm table-hover">
        <thead>
            <tr id="headTr">
                <th>
                    Title
                </th>
                <th>
                    Price
                </th>
                <th>
                    Listing Date
                </th>
                <th>
                    Owner
                </th>
                <th>
                    Category
                </th>
                <th>
                    Image Count
                </th>
                <th></th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model.Where(x => x.ClassifiedListing.IsArchive == false))
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ClassifiedListing.ItemName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ClassifiedListing.Price)
                    </td>
                    <td>
                        @item.ClassifiedListing.ListingDate.ToString("MM/dd/yyyy")
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ClassifiedListing.Owner.FullName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ClassifiedListing.ClassifiedCategory.Description)
                    </td>
                    <td>
                        @item.ClassifiedImages.Where(u => u.ClassifiedListingId == item.ClassifiedListing.ClassifiedListingId).Count()
                    </td>
                    <td>
                        <div class="btn-group">
                            <a asp-action="Edit" asp-route-id="@item.ClassifiedListing.ClassifiedListingId" class="btn btn-info btn-sm">
                                <span class="d-none d-lg-block">Edit</span>
                                <i class="fas fa-edit d-lg-none"></i>
                            </a>
                            <a asp-action="Details" asp-route-id="@item.ClassifiedListing.ClassifiedListingId" class="btn btn-warning btn-sm">
                                <span class="d-none d-lg-block">Details</span>
                                <i class="fas fa-info d-lg-none"></i>
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.ClassifiedListing.ClassifiedListingId" class="btn btn-danger btn-sm">
                                <span class="d-none d-lg-block">Delete</span>
                                <i class="fas fa-trash d-lg-none"></i>
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>