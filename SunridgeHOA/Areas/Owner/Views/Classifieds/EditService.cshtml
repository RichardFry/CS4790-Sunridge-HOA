@model SunridgeHOA.Models.ClassifiedListing
@{
    ViewData["Title"] = "Edit Service";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row col-12">
    <div id="ownerContainer" class="col-10">
        <h2>Edit Service Listing</h2>

        <hr />
        <div class="row">
            <div class="col-md-6">
                <form asp-action="EditService" method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label>Service description</label>
                        <input type="text" class="form-control" name="description" value="@Model.Description"/>
                    </div>
                    <div class="form-group">
                        <label>Existing image</label>
                        <div class="col-md-3" style="float:none; margin: 0 auto;">
                            <img src="@Model.Images[0].ImageURL" style="max-width:300px;" />
                        </div>
                        <label>Change image</label>
                        <input type="file" name="files" class="form-control" accept="image/*" />
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Submit" class="btn btn-default" />
                    </div>
                </form>
            </div>
        </div>

        <div>
            <a asp-action="Index">Back to List</a>
        </div>
    </div>
</div>