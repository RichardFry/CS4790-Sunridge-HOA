@model List<SunridgeHOA.Models.ViewModels.ClassifiedListingViewModel>
@using SunridgeHOA.Models.ViewModels
@using SunridgeHOA.Extensions
@{
    ViewData["Title"] = "Index";
}


<div class="row">
    <div class="ownerContainer">
        <h2>Post New Ad</h2>

        <p id="createAlign">
            <a asp-action="Create"><button type="button" class="btn btn-primary btn-sm">Create New Post Ad</button></a>
        </p>

        <table>
            <thead>
                <tr id="headTr">
                    <th>
                        Item<br />Name
                    </th>
                    <th>
                        Price
                    </th>
                    <th>
                        Description
                    </th>
                    <th>
                        Listing Date
                    </th>
                    <th>
                        Phone
                    </th>
                    <th>
                        Email
                    </th>
                    <th>
                        Owner
                    </th>
                    <th>
                        Classified<br />Category
                    </th>
                    <th>
                        Image
                    </th>
                    <th>
                        IsArchive
                    </th>
                    <th></th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ClassifiedListing.ItemName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ClassifiedListing.Price)
                    </td>
                    <td>
                        @item.ClassifiedListing.Description.Truncate(100).Concatenate("...")
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ClassifiedListing.ListingDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ClassifiedListing.Phone)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ClassifiedListing.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ClassifiedListing.Owner.FullName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ClassifiedListing.ClassifiedCategory.Description)
                    </td>
                    <td id="postNewAdImage">
                        @foreach (var image in item.ClassifiedImages.Where(x => x.ClassifiedListingId == item.ClassifiedListing.ClassifiedListingId))
                        {
                            @*<p>@image.ImageURL</p>*@
                            <img src="../../..@image.ImageURL" style="border-radius:5px;" />
                        }
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ClassifiedListing.IsArchive)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.ClassifiedListing.ClassifiedListingId"><button type="button" class="btn btn-info btn-sm">Edit</button></a> |
                        <a asp-action="Details" asp-route-id="@item.ClassifiedListing.ClassifiedListingId"><button type="button" class="btn btn-warning btn-sm">Details</button></a> |
                        <a asp-action="Delete" asp-route-id="@item.ClassifiedListing.ClassifiedListingId"><button type="button" class="btn btn-danger btn-sm">Delete</button></a>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>







