@model SunridgeHOA.Models.Photo
@{
    ViewData["Title"] = "Photo Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row col-12">
    <div id="windowFrame" class="col-10">
        <div class="col-12">
            <div class="row">
                <div id="titleDiv" class="col-12">
                    <p id="title">Photo Details</p>
                </div>
            </div>
            <hr />
            <div class="p-4 border rounded">
                <div class="form-group row">
                    <div class="col-2">
                        <label asp-for="Title"></label>
                    </div>
                    <div class="col-5">
                        <input asp-for="Title" readonly class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-2">
                        <label asp-for="Owner.FullName"></label>
                    </div>
                    <div class="col-5">
                        <input asp-for="Owner.FullName" readonly class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-2">
                        <label asp-for="Year"></label>
                    </div>
                    <div class="col-5">
                        <input asp-for="Year" readonly class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-2">
                        <label asp-for="Category"></label>
                    </div>
                    <div class="col-5">
                        <input asp-for="Category" readonly class="form-control" />
                    </div>
                </div>

                <div class="col-1">

                </div>
                <div class="col-3">
                    <img src="@Model.Image" style="border-radius: 5px; border:1px solid #bbb9b9; width:100%" />
                </div>
                <br />
                <div class="form-group">
                    <a asp-action="Edit" asp-route-id="@Model.PhotoId" class="btn btn-primary">Edit</a>
                    <a asp-action="MyPhotos" class="btn btn-success">Back to List</a>
                </div>
            </div>
        </div>
    </div>
</div>