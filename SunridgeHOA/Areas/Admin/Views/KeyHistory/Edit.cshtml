@model SunridgeHOA.Models.ViewModels.KeyHistoryViewModel
@using SunridgeHOA.Extensions
@{
    ViewData["Title"] = "Edit Key Assignment";
}
<div class="row col-12">

    <div id="windowFrame" class="col-10">
        <h2>Edit Key Assignment</h2>
        <hr />
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="KeyHistory.KeyHistoryId" />
                    <div class="form-group">
                        <label asp-for="KeyHistory.KeyId" class="control-label"></label>
                        <select asp-for="KeyHistory.KeyId" class="form-control" asp-items="Model.Key.keyIdToSelectListItem(Model.KeyHistory.KeyHistoryId)"></select>
                        <span asp-validation-for="KeyHistory.KeyId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="KeyHistory.LotId" class="control-label"></label>
                        <select asp-for="KeyHistory.LotId" class="form-control" asp-items="@ViewBag.LotsSelect"></select>
                        <span asp-validation-for="KeyHistory.LotId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="KeyHistory.Status" class="control-label"></label>
                        <input asp-for="KeyHistory.Status" class="form-control" />
                        <span asp-validation-for="KeyHistory.Status" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="KeyHistory.DateIssued" class="control-label"></label>
                        <input asp-for="KeyHistory.DateIssued" class="form-control" />
                        <span asp-validation-for="KeyHistory.DateIssued" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="KeyHistory.DateReturned" class="control-label"></label>
                        <input asp-for="KeyHistory.DateReturned" class="form-control" />
                        <span asp-validation-for="KeyHistory.DateReturned" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="KeyHistory.PaidAmount" class="control-label"></label>
                        <input asp-for="KeyHistory.PaidAmount" class="form-control" />
                        <span asp-validation-for="KeyHistory.PaidAmount" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-default" />
                    </div>
                </form>
            </div>
        </div>

        <div>
            <a asp-action="Index">Back to List</a>
        </div>
    </div>
</div>

